<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="CCFCSPORTS.CCFCSPORTSTournamentPage">
	<ScrollView>
	<StackLayout Padding = "10">
			
 		<Button x:Name = "WeekendGames" 
		 		Text = "WEEKEND GAMES" 
		 		TextColor = "White"
		 		BackgroundColor ="Gray" 
				BorderRadius = "7" 
			    HeightRequest ="100" 
			    HorizontalOptions ="FillAndExpand"
				Clicked = "Handle_Clicked"/>
			
 		<Button x:Name = "MerchantsCup" 
		 	    Text = "MERCHANTS CUP" 
		        TextColor = "White"
		        BackgroundColor ="Gray" 
		        BorderRadius = "7" 
			    HeightRequest ="100"
			    HorizontalOptions ="FillAndExpand"/>
			
 		<Button x:Name = "DomesticTournaments" 
		 		Text = "DOMESTIC TOURNAMENTS" 
		 		TextColor = "White"
		 		BackgroundColor ="Gray" 
		 		BorderRadius = "7" 
			    HeightRequest ="100" 
			    HorizontalOptions ="FillAndExpand"/>
			
		<Button x:Name = "InternationalTournaments" 
		 		Text = "INTERNATIONAL TOURNAMENTS" 
		 		TextColor = "White"
		 		BackgroundColor ="Gray" 
		 		BorderRadius = "7" 
			    HeightRequest ="100" 
			    HorizontalOptions ="FillAndExpand"/>
			
	</StackLayout>
</ScrollView>
</ContentPage>
