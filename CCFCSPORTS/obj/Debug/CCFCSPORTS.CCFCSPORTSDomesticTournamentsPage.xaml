<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="CCFCSPORTS.CCFCSPORTSDomesticTournamentsPage">
	<StackLayout Padding = "10">
		<StackLayout Orientation = "Horizontal">
		<Button x:Name= "ATeam" 
				Text = "A Team"
				TextColor = "White"
		 		BackgroundColor = "Gray" 
				BorderRadius = "7" 
			    HeightRequest = "40" 
			    HorizontalOptions = "FillAndExpand"/>
		<Button x:Name= "BTeam" 
				Text = "B Team"
				TextColor = "White"
		 		BackgroundColor ="Gray" 
				BorderRadius = "7" 
			    HeightRequest = "40" 
			    HorizontalOptions = "FillAndExpand"/>
		<Button x:Name = "CTeam" 
				Text = "C Team"
				TextColor = "White"
		 		BackgroundColor = "Gray" 
				BorderRadius = "7" 
			    HeightRequest ="40" 
			    HorizontalOptions = "FillAndExpand"/>
		
		</StackLayout>

		<ListView  x:Name="lstView" RowHeight="60">
			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<StackLayout Orientation="Horizontal" HorizontalOptions="Fill" BackgroundColor = "Red">
							<Label Text = "FT" BackgroundColor = "Gray" VerticalTextAlignment = "Center" HorizontalTextAlignment = "Center" WidthRequest = "60" HeightRequest = "50"/>
							<StackLayout WidthRequest = "30" BackgroundColor = "Silver" HeightRequest = "50">
                        		<Label Text="{Binding TeamOneScore}"></Label>
                            	<Label Text="{Binding TeamTwoScore}"></Label>
							</StackLayout>
							<StackLayout Orientation="Vertical" HorizontalOptions = "Center">
								<Label Text = "{Binding TeamOne}" />
								<Label Text = "{Binding TeamTwo}"/>
							</StackLayout>
<!--							<Image Source="{Binding Image}" HorizontalOptions="End" AbsoluteLayout.LayoutBounds="250.25, 0.25, 50, 50 "/>-->
						</StackLayout>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>

		
