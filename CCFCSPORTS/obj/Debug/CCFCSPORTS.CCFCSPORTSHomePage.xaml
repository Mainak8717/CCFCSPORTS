<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="CCFCSPORTS.CCFCSPORTSHomePage">
<ScrollView>
	<Grid Padding = "10">
            <Grid.RowDefinitions>
           	    <RowDefinition Height="*" />
				<RowDefinition Height="*" />
				<RowDefinition Height="*" />
				<RowDefinition Height="*" />
				<RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
			    <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
		
            <Button x:Name = "CRICKET" Text = "CRICKET" TextColor = "White" Grid.Row = "0" Grid.Column="0" BackgroundColor ="Gray" BorderRadius = "7" Clicked = "SportBtn_Clicked"/>
            <Button x:Name = "FOOTBALL" Text = "FOOTBALL" TextColor = "White" Grid.Row = "0" Grid.Column="1" BackgroundColor ="Gray"/>
		    <Button Text = "RUGBY" TextColor = "White" Grid.Row = "1" Grid.Column="0" BackgroundColor ="Gray"/>
            <Button Text = "TENNIS" TextColor = "White" Grid.Row = "1" Grid.Column="1" BackgroundColor ="Gray"/>
		    <Button Text = "GOLF" TextColor = "White" Grid.Row = "2" Grid.Column="0" BackgroundColor ="Gray"/>
            <Button Text = "SWIMMING" TextColor = "White" Grid.Row = "2" Grid.Column="1" BackgroundColor ="Gray"/>
		    <Button Text = "DARTS" TextColor = "White" Grid.Row = "3" Grid.Column="0" BackgroundColor ="Gray"/>
            <Button Text = "BRIDGE" TextColor = "White" Grid.Row = "3" Grid.Column="1" BackgroundColor ="Gray"/>
		    <Button Text = "BADMINTON" TextColor = "White" Grid.Row = "4" Grid.Column="0" BackgroundColor ="Gray"/>
            <Button Text = "CYCLE POLO" TextColor = "White" Grid.Row = "4" Grid.Column="1" BackgroundColor ="Gray"/>
		</Grid>
		</ScrollView>
</ContentPage>
