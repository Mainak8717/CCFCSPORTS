<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	         x:Class="CCFCSPORTS.CCFCSPORTSCategoryPage">

<ScrollView>
	<StackLayout Padding = "10">
			
 		<Button x:Name = "TOURNAMENT" 
		 		Text = "TOURNAMENTS" 
		 		TextColor = "White"
		 		BackgroundColor ="Gray" 
				BorderRadius = "7" 
			    HeightRequest ="100" 
			    HorizontalOptions ="FillAndExpand"
				Clicked = "Handle_Clicked"/>
			
 		<Button x:Name = "PHOTOGALLERY" 
		 	    Text = "PHOTO GALLERY" 
		        TextColor = "White"
		        BackgroundColor ="Gray" 
		        BorderRadius = "7" 
			    HeightRequest ="100"
			    HorizontalOptions ="FillAndExpand"/>
			
 		<Button x:Name = "SECTIONBEARERS" 
		 		Text = "SECTION BEARERS" 
		 		TextColor = "White"
		 		BackgroundColor ="Gray" 
		 		BorderRadius = "7" 
			    HeightRequest ="100" 
			    HorizontalOptions ="FillAndExpand"/>
			
		<Button x:Name = "EXCAPTAINS" 
		 		Text = "Ex CAPTAINS" 
		 		TextColor = "White"
		 		BackgroundColor ="Gray" 
		 		BorderRadius = "7" 
			    HeightRequest ="100" 
			    HorizontalOptions ="FillAndExpand"/>
			
	</StackLayout>
</ScrollView>
	
</ContentPage>
